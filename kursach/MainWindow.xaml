<Window x:Class="kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabcontrol">
            <TabItem Header="Авторизация">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="19" Margin="0,30,0,0"/>
                    <Label Content="Логин:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,145,210,0"/>
                    <TextBox x:Name="login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0" Width="150"/>
                    <Label Content="Пароль:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,185,210,0"/>
                    <TextBox x:Name="password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,190,0,0" Width="150"/>
                    <Button Click="Button_Click" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,250,0,0" Width="150" Height="30"/>
                </Grid>
            </TabItem>
            <TabItem Header="Регистрация">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="19" Margin="0,30,0,0"/>
                    <Label Content="ФИО:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,145,210,0"/>
                    <TextBox x:Name="fio" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0" Width="150"/>
                    <Label Content="Логин:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,185,210,0"/>
                    <TextBox x:Name="reg_login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,190,0,0" Width="150"/>
                    <Label Content="Пароль:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,225,210,0"/>
                    <TextBox x:Name="reg_password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,230,0,0" Width="150"/>
                    <Button Click="Button_Click_1" Content="Зарегистрироваться" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,300,0,0" Width="150" Height="30"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
