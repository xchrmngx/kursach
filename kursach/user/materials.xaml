<Window x:Class="kursach.user.materials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach.user"
        mc:Ignorable="d"
        Title="materials" Height="450" Width="800">
    <Grid>
        <ListView Name="typelist" Height="400" Margin="0,0,500,60" Width="350" Foreground="Black" SelectionChanged="typelist_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Image x:Name="IMG" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="300,30,0,0" Width="200" Height="150"/>
        <TextBox x:Name="nazvanie" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="300,165,0,0" Width="150" BorderThickness="0" TextWrapping="Wrap"/>
        <TextBox x:Name="opisanie" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="300,200,0,0" Width="300" Height="100" BorderThickness="0" TextWrapping="Wrap"/>
        <Button Click="Button_Click" x:Name="read" Visibility="Hidden" Content="Перейти к чтению" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="300,320,0,0" Height="30" Width="150"/>
        <Button Click="Button_Click_1" x:Name="test" Visibility="Hidden" Content="Перейти к тестам" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="300,360,0,0" Height="30" Width="150"/>
        <Image x:Name="kartinka" HorizontalAlignment="Center" VerticalAlignment="Top" Width="20" Height="20" Margin="470,365,0,0"/>
        <Button Click="Button_Click_2" x:Name="reset" Visibility="Hidden" Content="Сбросить выбор" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,360,30,0" Width="150" Height="30"/>
        <Button Click="Button_Click_3" Content="Выйти" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,360,660,0" Width="100" Height="30"/>
        <Button Click="Button_Click_4" x:Name="addpreview" Visibility="Hidden" Content="Добавить фото" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="650,10,0,0" Width="100" Height="50"/>
        <Button Click="Button_Click_5" x:Name="save" Visibility="Hidden" Content="Сохранить изменения" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,320,30,0" Width="150" Height="30"/>
        <Label x:Name="result" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="594,355,0,0"/>
        <Label x:Name="count" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="607,370,0,0"/>
        <Button Click="Button_Click_6" x:Name="addnew" Content="Добавить новый материал" HorizontalAlignment="Center" VerticalAlignment="Top" Width="160" Height="30" Margin="0,360,380,0"/>
    </Grid>
</Window>
